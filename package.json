{
  "name": "minigamba",
  "version": "1.0.0",
  "description": "miniGamba - The Ultimate In-Game Companion. A desktop overlay app that turns your downtime into dopamine.",
  "main": ".webpack/main/index.js",
  "author": "Qrytics",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "electron-forge start",
    "build": "electron-forge make",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:single": "playwright test --workers=1",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright test && playwright show-report tests/reports",
    "test:e2e:workers": "playwright test --workers=4",
    "test:bugs": "node tests/generate-reports.js",
    "test:analyze": "node tests/analyze-test-data.js",
    "test:cleanup": "node tests/cleanup-test-data.js",
    "create-icon": "node scripts/create-app-icon.js",
    "test:all": "npm run test && npm run test:e2e",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "better-sqlite3": "^12.0.0",
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.0.0",
    "@electron-forge/maker-deb": "^7.0.0",
    "@electron-forge/maker-rpm": "^7.0.0",
    "@electron-forge/maker-squirrel": "^7.0.0",
    "@electron-forge/maker-zip": "^7.0.0",
    "@electron-forge/plugin-webpack": "^7.0.0",
    "@playwright/test": "^1.58.2",
    "@types/better-sqlite3": "^7.6.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vercel/webpack-asset-relocator-loader": "^1.7.0",
    "css-loader": "^6.0.0",
    "electron": "^28.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "jest": "^29.0.0",
    "node-loader": "^2.0.0",
    "playwright": "^1.58.2",
    "prettier": "^3.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "sharp": "^0.33.5",
    "style-loader": "^3.0.0",
    "ts-jest": "^29.0.0",
    "ts-loader": "^9.0.0",
    "typescript": "^5.0.0",
    "webpack": "^5.0.0"
  }
}
